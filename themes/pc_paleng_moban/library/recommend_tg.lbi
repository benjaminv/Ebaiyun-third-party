<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<div class="index-box index-top2">
    <h2>
        <i class="bulk-icon"></i>
        <span class="span-txt">团购</span>
        <div class="index-h2-right" style="display:none">
            <span class="index-h2-right-txt">当前场次</span>
            <span class="index-h2-right-blank">03</span>
            <span class="index-h2-right-blank2">:</span>
            <span class="index-h2-right-blank">47</span>
            <span class="index-h2-right-blank2">:</span>
            <span class="index-h2-right-blank">32</span>
            <span class="index-h2-right-txt">后结束抢购</span>
        </div>
    </h2>
    <div class="bulk-content" style="height:280px;">
    <!-- {if $group_buy_goods} -->
       <ul id="globalGroup">
          <!-- {foreach from=$group_buy_goods item=goods} -->
           <li>
               <a href="{$goods.url}" target="_blank">
                   <div class="img"><img src="{$goods.thumb}" alt="{$goods.goods_name|escape:html}"/></div>
                   <span class="bulk-width bulk-size">{$goods.short_style_name|truncate:14}</span>
                 <span class="bulk-width">
                     <span class="bulk-price">{$goods.last_price}</span>
                     <span class="bulk-price-line">已有<font class="price" style="color:#D00">{$goods.valid_goods}</font>人参团</span>
                 </span>
               </a>
               <div class="bulk-line"></div>
           </li>
           <!-- {/foreach} -->
          
       </ul>
       <!-- {/if} -->
    </div>
   
</div>