
/***********我的佰云币************/

.baiyunbi{
    width: 980px;
    overflow: hidden;
    padding: 0 20px;
    box-sizing: border-box;
    float: right;
    background: #fff;
    h4{
        font-size: 14px;
        color: #333;
        line-height: 48px;
    }
    
}
.mybyb{   /*****账户余额、佰云币余额******/
    width: 100%;
    height: 150px;
    div{
        width: 100%;
        height: 100px;
        border: 1px solid #F6F6F6;
        box-sizing: border-box;
        p{
            font-size: 12px;
            color: #999;
            text-indent: 20px;
            margin-top: 18px;
        }
        span{
            font-size: 18px;
            color: #00843E;
            margin-top: 18px;
            margin-left: 220px;
            display: block;
        }
    }
}



.byb_detail,#account_detail{         /*******明细公共样式********/
    width: 100%;
    overflow: hidden;
    table{
        width: 100%;
        overflow: hidden;
        margin-bottom: 40px;
    }
    th{
        background: #F6F6F6;
        height: 30px;
        line-height: 30px;
        color: #999;
        width: 30%;
    }
    td{
        height: 60px;
        border-bottom: 1px solid #F6F6F6;
        line-height: 60px;
        text-align: center;
        p{
            color: #333;
        }
        .earning{
            color: #009646;
        }
        .expenditure{
            color: #F18E00;
        }
        
    }
    h6{
        width: 100%;
        height: 60px;
        line-height: 60px;
        color: #333333;
        font-size: 14px;
        text-align: right;
        border: 1px solid #F6F6F6;
        box-sizing: border-box;
    }
}


/***********我的积分***********/

.integral{
    width: 980px;
    overflow: hidden;
    padding: 0 20px;
    box-sizing: border-box;
    float: right;
    background: #fff;
    h4{
        font-size: 14px;
        color: #333;
        line-height: 48px;
    }
    .myintegral{
        width: 100%;
        height: 180px;
        table{
            width: 100%;
            height: 130px;
            border: 1px solid #F6F6F6;
            box-sizing: border-box;
            th{
                height: 30px;
                line-height: 30px;
                background: #F6F6F6;
                color: #999;
                width: 50%;
            }
            td{
                height: 100px;
                text-align: center;
                span{
                    color: #009646;
                    line-height: 100px;
                    font-size: 18px;
                }
                a{
                    display: block;
                    width: 200px;
                    height: 42px;
                    border: 1px solid #00843E;
                    background: #DAECE3;
                    margin: 28px auto 0;
                    color: #009646;
                    line-height: 42px;
                    font-size: 18px;
                }
            }
        }
    }
}


/***********账户余额************/

.account_nav{
    width: 100%;
    height: 50px;
    border-bottom: 1px solid #F6F6F6;
    p{
        font-size: 14px;
        color: #333;
        line-height: 48px;
        float: left;
        margin-right: 20px;
        cursor: pointer;
        &:hover{
            color: #009646;
        }
        
    }
    .active{
        color: #009646;
    }
}
.account_func{
    width: 100%;
    overflow: hidden;
    #account_up{
        width: 100%;
        overflow: hidden;
        display: none;
        ul{
            width: 100%;
            height: 160px;
            border: 1px solid #F6F6F6;
            box-sizing: border-box;
            padding-top: 20px;
            
            li{
                margin-bottom: 20px;
                overflow: hidden;
                p{
                    width: 80px;
                    font-size: 12px;
                    text-align: right;
                    color: #333333;
                    line-height: 24px;
                    float: left;
                }
                input{
                    width: 200px;
                    height: 24px;
                    border: 1px solid #ccc;
                    text-indent: 8px;
                    font-size: 14px;
                }
                textarea{
                    width: 400px;
                    height: 60px;
                    border: 1px solid #ccc;
                    text-indent: 8px;
                    font-size: 16px;
                }
            }
        }
        table{
            width: 100%;
            overflow: hidden;
            margin-bottom: 50px;
        }
        th{
            background: #F6F6F6;
            height: 30px;
            line-height: 30px;
            color: #999;
            width: 30%;
        }
        td{
            height: 60px;
            border-bottom: 1px solid #F6F6F6;
            line-height: 60px;
            text-align: center;
            input{
                margin-right: 10px;
            }
            p{
                color: #333;
            }
            .earning{
                color: #009646;
            }
            .expenditure{
                color: #F18E00;
            }
            
        }
        .account_btn{
            width: 240px;
            height: 30px;
            margin: 0 auto;
            input{
                width: 98px;
                height: 30px;
                margin: 0 10px;
                float: left;
                cursor: pointer;
                border: 1px solid #CCCCCC;
                color: #494949;
                background: #FFFFFF;
                font-size: 14px;
                &:first-child{
                    background: #DAECE3;
                    border: 1px solid #009646;
                    color: #00843E;
                }
            }
            
        }
    }
    #account_detail{
        display: none;
    }
    #account_record{
        width: 100%;
        overflow: hidden;
        position: relative;
        display: none;
        table{
            width: 100%;
            overflow: hidden;
            margin-bottom: 40px;
        }
        tr{
            display: flex;
        }
        th{
            flex: 1;
            background: #F6F6F6;
            height: 30px;
            line-height: 30px;
            color: #999;
        }
        td{
            flex: 1;
            height: 60px;
            border-bottom: 1px solid #F6F6F6;
            line-height: 60px;
            text-align: center;
            p{
                color: #333;
            }
            .earning{
                color: #009646;
            }
            .expenditure{
                color: #F18E00;
            }
            
        }
        h6{
            width: 100%;
            height: 60px;
            line-height: 60px;
            color: #333333;
            font-size: 14px;
            text-align: right;
            border: 1px solid #F6F6F6;
            box-sizing: border-box;
            
                
        }
        .fenye{
            width: 580px;
            height: 30px;
            position: absolute;
            bottom: 20px;
            right: 0;
            p{
                font-size: 12px;
                color: #333333;
                line-height: 30px;
            }
            input{
                width: 28px;
                height: 18px;
                border: 1px solid #CCCCCC;
                margin: 0 8px;
                text-align: center;
            }
            a{
                color: #333333;
            }
            button{
                width: 40px;
                height: 30px;
                background: #009646;
                border: none;
                color: #fff;
            }
        }
    }
    .account_show{
        display: block !important;
    }
}
